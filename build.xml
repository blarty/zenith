			<include name="org/jini/projects/zenith/messaging/broker/leasing/LeasedMesgRegistration.java" />
		</patternset>

		<patternset id="routersvc.dl.sources">
			<include name="org/jini/projects/zenith/router/constrainable/*.java" />
