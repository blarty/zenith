	<target name="javadoc" depends="init">
		<mkdir dir="${javadoc}" />
		<javadoc destdir="${javadoc}" packagenames="org.jini.projects.zenith.*" additionalparam="-breakiterator">
			<sourcepath>
				<pathelement location="${src}" />
			</sourcepath>
			<classpath refid="project.class.path" />
			<link href="http://nts4_007.countrywide-assured.co.uk:8001/Dept/it/Architecture/Java/JDKDocs/docs/api" />
			<link href="http://nts4_007.countrywide-assured.co.uk:8001/Dept/it/Architecture/Java/jini2_0/docs/api" />
		</javadoc>
	</target>

	<target depends="init, compile, jar" name="dist">
		<mkdir dir="${dist.root}" />
		<mkdir dir="${dist}" />
		<mkdir dir="${bin}" />
		<mkdir dir="${backup}" />
		<mkdir dir="${conf}" />
		<mkdir dir="${logs}" />

		<echo file="${dist}/conf/policy.all">
        grant {
		    permission java.security.AllPermission "", "";
		};        
        </echo>

		<echo file="${dist}/startbroker.sh">
		java -classpath ./lib/zenith.jar:${jinilib}/jsk-platform.jar:${java.libs.loc}/serviceui-1.1a.jar:${jinilib}/jini-core.jar:${jinilib}/jini-ext.jar:${jinilib}/sun-util.jar:. -Djava.security.policy=conf/policy.all -Djava.rmi.server.codebase=${dl-url} org.jini.projects.zenith.messaging.broker.BrokerStartup $1
		</echo>

		<echo file="${dist}/startrouter.sh">
				java -classpath ./lib/zenith.jar:${jinilib}/jsk-platform.jar:${java.libs.loc}/serviceui-1.1a.jar:${jinilib}/jini-core.jar:${jinilib}/jini-ext.jar:${jinilib}/sun-util.jar:. -Djava.security.policy=conf/policy.all -Djava.rmi.server.codebase=${dl-url} org.jini.projects.zenith.router.RouterStartup $1
				</echo>

		<echo file="${dist}/readme.txt">
		</echo>
		<echo file="${dist}/install.txt">
		</echo>
		<echo file="${dist}/changelog.txt">
		</echo>
	</target>

	<target depends="init" name="clean">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${build.jvm14}" />
		<delete dir="${dist}" />
		<delete dir="${classes}" />
	</target>
</project>

